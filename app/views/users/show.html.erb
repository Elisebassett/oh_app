<h1><%= @user.name %>'s Dashboard</h1>
<div class="row">
  <div class="col s12 m3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <%= image_tag @user.avatar.url(:thumb), class: "center" %>
        <span class="card-title">Welcome <%= @user.first_name %></span>

        <p><%= @user.email %></p>
        <p><%= @user.occupation %></p>
        <p><%= @user.department %></p>
        <p><%= @user.points %></p>
      </div>
      <div class="card-action">
      	<%= link_to "Edit account", edit_user_registration_path %>
      	<br>
      </div>
    </div>
  </div> <!-- end of column -->
    <div class="col s6 ">
      <div class="card blue-grey darken-1">
        <div class="card-content black-text">
          <span class="card-title">My Projects</span>
            <% @projects.each do |project| %>
              <%= render project %>
            <% end %>
          <div class="row">
            <div class="card white">
              <div class="card-content black-text">
              <span class="card-title"><%= @projects.name %></span>
                <% @tasks.each do |task| %>
                  <%= render tasks %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col s12 m3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">My Tasks</span>
            <% @tasks.each do |task| %>
              <li><%= render tasks %>
            <% end %>
            <%= form_with model: @task do |f| %>
              <%= f.button "completed"   %>
           <% end  %>
        </div>
      </div>
    </div>
</div>
