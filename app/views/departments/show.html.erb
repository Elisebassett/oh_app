<div class="container-fluid">
  <!-- Collumn 1 - shows all dept info and action items to be taken on this dash -->
  <div class="row">
    <div class="col">
      <h1><%= @department.name %> Department</h1>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Department: <%= @department.name %></span>
        </div>
        <div class="card-action">
          <%= link_to "Create Project", '#modal1', class: "waves-effect waves-light btn modal-trigger" %>
          <br>
          <%= link_to "Edit Project", edit_project_path(:id) %>
          <br>
          <%= link_to "Delete", @project, method: :delete, remote: :true, class: "destroy_project" %>
        </div>
      </div>
    </div>
    <%= render 'modal' %>
    
    <!-- Collumn 2 - should loop through every project that belongs to this department -->
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content black-text">
          <span class="card-title">Projects</span>
          <div class="row">
             <% @projects.each do |project| %>
              <%= render project %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  
    <!-- collumn 3- should loop through and show every employee that belongs to this department -->
    <div class="col s12 m3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Team</span>
          <p>Department Manager</p>
        </div>
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">Employees</span>
            <ul class="collapsible" data-collapsible="accordion">
             <% @users.each do |user| %>
                <div class="collapsible-header black-text">
                  <%= user.name %>
                </div>
                <div class="collapsible-body">
                  <span><p>Assign to Department</p></span>
                </div>
              <% end %>
            </ul>
          </div>
        </div>  
      </div>
    </div>
  </div>
</div>
