
<h1>Company Dashboard</h1>
<div class="row">
        <div class="col s12 m3">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Project Info</span>
              <p>project info goes here</p>
            </div>
            <div class="card-action">
            	<%= link_to "My Department" %>
            	<br>
            	<%= link_to "Edit Department", edit_department_path(:id) %>
            	<br>
							<%= link_to "Destroy Department", department_path(:id), method: :delete %>
            </div>
          </div>
        </div>
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content black-text">
              <span class="card-title">Departments</span>
              <div class="row">
                 <% @department.each do |department| %>
                  <%= render department %>
                <% end %>
              </div>
            </div>
            	<div class="card">
            		<div class="card-content black-text">
              		<span class="card-title">Projects</span>
              			<p><%= link_to "project", project_path(:id) %></p>
              	</div>
            	</div>
          </div>
        </div>
        <div class="col s12 m3">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Managers</span>
              <p>department managers listed</p>
            </div>
          	<div class="card blue-grey darken-1">
            	<div class="card-content white-text">
              	<span class="card-title">Employees</span>
              	<p>employees listed</p>
            	</div>
          	</div>	
        	</div>
      </div>

