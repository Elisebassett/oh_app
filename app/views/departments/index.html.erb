<div class="container-fluid">
  <div class="row">
    <div class="col">
      <h1>Company Dashboard</h1>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Company Info</span>
          <p>This is a company that does things and other stuff</p>
        </div>
        <div class="card-action">
          <p class="card-title white-text">Actions</p>
          <%= link_to "New Department", new_department_path %>
          <p class="card-title white-text">Departments</p>
          <div class="collection">
            <% @departments.each do |department| %>
              <%= link_to department.name , department_path(department), class: "collection-item" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content black-text">
          <span class="card-title white-text">Departments</span>
          <div class="row">
             <% @departments.each do |department| %>
              <%= render department %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col s12 m3">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title">Managers</span>
                <p>department managers listed</p>
              </div>
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title">Employees</span>
                  <ul class="collapsible" data-collapsible="accordion">
                    <% @users.each do |user| %>
                      <%= render user %> <!-- current push -->
                    <% end %>
                  </ul>
                </div>
              </div>  
            </div>
        </div>
      </div>
    </div>
  </div>
</div>