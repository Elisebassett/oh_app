  <div class="row">
    <div class="col">
      <h1><%= @project.name %> Dashboard</h1>
    </div>
  </div>
    <div class="row">
      <div class="col s12 m3">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">Project: <%= @project.name %></span>
            <p><%= @project.description %></p>
            <p><%= @project.deadline %></p>
            <br>
            <%= link_to "Edit Project", edit_project_path(:id) %>
            <br>
             <%= link_to "Delete", @project, method: :delete, class: "destroy_project" %>
          </div>
          <div class="card-action">
            <span class="card-title">Department</span>
            <br>
            <%= link_to @department.name, department_path(@department) %>
            <br>
            <br>  
            <span class="card-title">Project Actions</span>
            <br>
            <%= link_to "Create Task", '#new-project-modal', class: "modal-trigger" %> 
          </div>
        </div>
      </div> <!-- end of column -->
      <%= render 'modal' %>
      <!-- start of displaying tasks -->
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content black-text">
            <span class="card-title white-text">Tasks</span>
            <div class="row">
                <ul class="collapsible tasks" data-collapsible="accordion">
                  <% @tasks.each do |task| %>
                    <%= render task %>
                  <% end %>
                </ul>
            </div>
          </div>
        </div>
      </div> <!-- end of column -->
      <div class="col s12 m3">
      <div class="card blue-grey darken-1">
        <div class="card-content">
          <span class="card-title white-text">Team Points</span>
            
        </div>
      </div>
    </div>
      <div class="col s12 m3">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">Team</span>
                add validations for manager
            <p>Manager: <%# user.name %></p>
          </div>
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">Employees</span>
            <ul class="collapsible" data-collapsible="accordion">
              <% @users.each do |user| %>
                <div class="collapsible-header black-text"><%= user.name %>
                </div>
                <div class="collapsible-body"><span>
                  <p>Assign to Department</p>
                  </span>
                </div>
              <% end %>
            </ul>
          </div>
        </div>  
    </div>
  </div>
</div> <!-- end of row -->
