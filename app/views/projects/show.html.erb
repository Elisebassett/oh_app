<h1><%= @project.name %> Dashboard</h1>
			<div class="row">
        <div class="col s12 m3">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Project Info</span>
              <p>project info goes here</p>
            </div>
            <div class="card-action">
            	<%= link_to "Create Tasks", task_new_path %>
            	<br>
            	<%= link_to "Edit Tasks", task_update_path(:id) %>
            </div>
          </div>
        </div>
         <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content black-text">
              <span class="card-title">Projects</span>
              <div class="row">
                 <% @project.tasks.all.each do |task| %>
                  <%= render tasks %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="col s12 m3">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Team</span>
              add validations for manager
              <p>Manager: <%= user.name %></p>
            </div>
          	<div class="card blue-grey darken-1">
            	<div class="card-content white-text">
              	<span class="card-title">Employees</span>
              	<p><%= user.name %></p>
            	</div>
          	</div>	
        	</div>
      </div>